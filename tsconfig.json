{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "paths": { 
      "@components/*": ["./src/components/*"],
			"@services/*": ["./src/services/*"],
			"@icons/*": ["./src/icons/*"],
      "@pages/*": ["./src/pages/*"]
		}
  },
  "include": ["*.ts", "*.js", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}