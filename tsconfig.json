{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@components/*": ["./src/components/*"],
			"@services/*": ["./src/services/*"],
			"@icons/*": ["./src/icons/*"],
      "@pages/*": ["./src/pages/*"],
      "@locales/*": ["./src/locales/*"],
		},
    "types": [
      "jest",
      "node",
      "@testing-library/react"
    ],
  },
  "include": ["*.ts", "*.js", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "./setupTests.ts"]
}